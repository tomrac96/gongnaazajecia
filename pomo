int ocena_go(plansza* teatr_wojenny) {
    int punkty_biale = 0;
    int punkty_czarne = 0;

    // Iteruj przez planszę i zliczaj punkty
    for (int j = 0; j < SZEROKOSC_PLANSZY; j++) {
        for (int i = 0; i < WYSOKOSC_PLANSZY; i++) {
            if (teatr_wojenny->plain[i][j] == BIALA) {
                punkty_biale++;
            } else if (teatr_wojenny->plain[i][j] == CZARNA) {
                punkty_czarne++;
            }
        }
    }

    // Zakładamy, że czarne zaczynają, więc białe dostają komi
    punkty_biale += 6;

    // Zwracamy różnicę punktów
    return punkty_czarne - punkty_biale;
}





void zakoncz_gre(plansza* teatr_wojenny) 
{
    int wynik = ocena_go(teatr_wojenny);

    if (wynik > 0) {
        printf("\nGracz CZARNY wygrywa!");
    } else if (wynik < 0) {
        printf("\nGracz BIALY wygrywa!");
    } else {
        printf("\nRemis! Obydwaj gracze mają tyle samo punktów.");
    }
}










void arena()//rozpoczecie meczu
{
    int glebokosc_kolka, glebokosc_krzyzyka, ocena;
    scanf("%d %d", &glebokosc_kolka, &glebokosc_krzyzyka);
    printf("info glebokosc kolka %d glebokosc krzyzyka %d\n", glebokosc_kolka, glebokosc_krzyzyka);
    while((ocena = negamax(&plansza, 0)) != -10 && ocena != 10 && czy_sa_wolne_pola(&plansza))
    {
        __graj(poletko.gracz_na_ruchu == RUCH_BIALY ? glebokosc_kolka : glebokosc_krzyzyka);
        wypisz(&plansza);
    }
    printf("info arena sie skonczyla\n");
}



